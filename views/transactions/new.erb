<h1>New Transaction</h1>
<form method="post" action="/transactions" class="input-form">
  <label for="description">Description</label>
  <input type="text" class="text-input" name="description">

  <label for="amount">Amount</label>
  <input type="text" class="text-input" name="amount">

  <label for="transaction_date">Date</label>
  <input type="date" class="text-input" name="transaction_date">

  <label>
    <select name="merchant">
      <% Merchant.all.each { |merchant| %>
      <option value="<%= merchant.id %>"><%=merchant.name%></option>
      <%}%>
    </select>
  </label>

  <label>
    <select name="tag">
      <% Tag.all.each { |tag| %>
      <option value="<%= tag.id %>"><%=tag.category%></option>
      <%}%>
    </select>
  </label>

  <input class="text-input" type='submit' value="Create"/>
</form>
