<h1>Transactions List</h1>
<form action="/transactions/new">
  <button>Create a New Transaction</button>
</form>
<div class="transaction-list">
  <ul>
    <%@transaction_list.each { |transaction|%>
      <li>
        <%= "<b>Date:</b> <i>#{transaction.transaction_date}</i>
        <br>
        <b>Description:</b> <i>#{transaction.description}</i>
        <br>
        <b>Amount:</b> <i>£#{sprintf "%.2f", transaction.amount}</i>
        <br><b>Merchant:</b> <i>#{transaction.merchant}</i>
        <br>
        <b>Tag:</b> <i>#{transaction.tag}</i>" %>
        <br>
        <a href="/transactions/<%=transaction.id%>/edit">Edit</a> |
        <a href="/transactions/<%=transaction.id%>/delete">Delete</a>
      </li>
      <hr>
    <%}%>
    <div class="total">Total Transactions Amount: £<%= sprintf "%.2f", Transaction.total %></div>
    <hr>
  </ul>
</div>
