<h1>Transactions <%= "#{@start_date} to #{@end_date}" %></h1>
<form action="/transactions/new">
  <button class="btn-transaction">Create a New Transaction</button>
</form>
<form action="/transactions/filter">
  <button class="btn-filter">Filter by Date</button>
  <div class="date-filter">
    <input class="start-date" type="date" name="start_date">
    <input class="end-date" type="date" name="end_date">
  </div>
</form>

<div class="transaction-list">
  <ul>
    <%@transaction_list.each { |transaction|%>
      <li>
        <%= "<b>Date:</b> <i>#{transaction.transaction_date}</i>
        <br>
        <b>Description:</b> <i>#{transaction.description}</i>
        <br>
        <b>Amount:</b> <i>Â£#{sprintf "%.2f", transaction.amount}</i>
        <br><b>Merchant:</b> <i>#{transaction.merchant}</i>
        <br>
        <b>Tag:</b> <i>#{transaction.tag}</i>" %>
        <br>
        <a href="/transactions/<%=transaction.id%>/edit">Edit</a> |
        <a href="/transactions/<%=transaction.id%>/delete">Delete</a>
      </li>
      <hr>
    <%}%>
  </ul>
</div>
