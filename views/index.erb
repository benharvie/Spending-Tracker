<div class="summary-list">
  <h2><b>Tag</b> Spendings</h2>
  <div class="chart">
  <ul>
    <%@tag_list.each { |tag|%>
      <li>
        <%= "<b>#{tag.category}:</b> £#{sprintf "%.2f", tag.total_spent}" %>
        <div style="width:<%="#{(tag.total_spent / Transaction.total * 2000).round}"%>px;">
          <%="#{(tag.total_spent / Transaction.total * 100).round(2)}%"%>
        </div>
      </li>
    <%}%>
    </div>
  </ul>
  <hr>

<h2><b>Merchant</b> Spendings</h2>
  <ul>
    <div class="chart">
    <%@merchant_list.each { |merchant|%>
      <li>
        <%= "<b>#{merchant.name}:</b> £#{sprintf "%.2f", merchant.total_spent}" %>
        <div style="width:<%="#{(merchant.total_spent / Transaction.total * 2000).round}"%>px;">
        <%="#{(merchant.total_spent / Transaction.total * 100).round(2)}%"%>
        </div>
      </li>
    <%}%>
  </div>
  </ul>
  <hr>
  <div class="total">Total Transactions Amount: £<%= sprintf "%.2f", Transaction.total %></div>
</div>
